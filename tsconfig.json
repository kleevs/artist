{
  "compileOnSave": false,
  "compilerOptions": {
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "module": "umd",
    "moduleResolution": "classic",
    "emitDecoratorMetadata": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types",
	    "../node_modules/*"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include" : [ 
    "./src/**/*.ts",
    "./example/**/*.ts"
  ],
  "exclude" : [
	  "./node_modules" 
  ]
}
